	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run Ingress Controller",
			"type": "go",
			"request": "launch",
			"mode": "auto",
			"program": "${workspaceFolder}/cmd/ingress-controller",
			"args": [
				"-kubeconfig",
				"${workspaceFolder}/.kcp/data/admin.kubeconfig"
			]
		},
		{
			"name": "Run Ingress Controller Envoy enabled",
			"type": "go",
			"request": "launch",
			"mode": "auto",
			"program": "${workspaceFolder}/cmd/ingress-controller",
			"args": [
				"-kubeconfig",
				"${workspaceFolder}/.kcp/data/admin.kubeconfig",
				"-envoyxds"
			]
		}
	]
}